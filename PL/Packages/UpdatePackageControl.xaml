<UserControl x:Class="PL.UpdatePackageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PL"
             xmlns:bl="clr-namespace:BL;assembly=BL"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="Control">
    <Grid Background="White" DataContext="{Binding ElementName=Control}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.IsSharedSizeScope="True" Grid.Row="0">
            <StackPanel.Resources>
                <Style TargetType="Label">
                    <Style.Triggers>
                        <Trigger Property="Grid.Column" Value="0">
                            <Setter Property="Foreground" Value="#FF484848" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Resources>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Key" />
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Value" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">ID</Label>
                <Label Grid.Column="1" Content="{Binding Path=Package.Value.Id}" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Key" />
                    <ColumnDefinition SharedSizeGroup="Value" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Sender</Label>
                <Label Grid.Column="1" Content="{Binding Path=Package.Value.Sender.Name}" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Key" />
                    <ColumnDefinition SharedSizeGroup="Value" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Recipient</Label>
                <Label Grid.Column="1" Content="{Binding Path=Package.Value.Receiver.Name}" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Key" />
                    <ColumnDefinition SharedSizeGroup="Value" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Priority</Label>
                <Label Grid.Column="1" Content="{Binding Package.Value.Priority}" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Key" />
                    <ColumnDefinition SharedSizeGroup="Value" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Weight Class</Label>
                <Label Grid.Column="1" Content="{Binding Path=Package.Value.Weight}" />
            </Grid>
            <Grid>
                <Grid.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Package.Value.Drone}" Value="{x:Null}">
                                <Setter Property="Grid.Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Key" />
                    <ColumnDefinition SharedSizeGroup="Value" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Drone</Label>
                <Label Grid.Column="1" Content="{Binding Package.Value.Drone.Id, FallbackValue='N/A'}" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Key" />
                    <ColumnDefinition SharedSizeGroup="Value" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Created</Label>
                <Label Grid.Column="1" Content="{Binding Package.Value.CreationTime}" />
            </Grid>
            <Grid>
                <Grid.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Package.Value.AssignmentTime}" Value="{x:Null}">
                                <Setter Property="Grid.Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Key" />
                    <ColumnDefinition SharedSizeGroup="Value" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Assigned</Label>
                <Label Grid.Column="1" Content="{Binding Package.Value.AssignmentTime}" />
                <Button Grid.Column="2" Width="90" Height="20" Content="Collect" HorizontalAlignment="Left" Click="CollectPackage">
                    <Button.Style>
                        <Style>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status.Value, Mode=OneWay}"
                                             Value="{x:Static bl:PackageStatus.assigned}">
                                    <Setter Property="Button.Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="Button.Visibility" Value="Collapsed"/>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            <Grid>
                <Grid.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Package.Value.CollectionTime}" Value="{x:Null}">
                                <Setter Property="Grid.Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Key" />
                    <ColumnDefinition SharedSizeGroup="Value" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Collected</Label>
                <Label Grid.Column="1" Content="{Binding Package.Value.CollectionTime}" />
                <Button Grid.Column="2" Width="90" Height="20" Content="Deliver" HorizontalAlignment="Left" Click="DeliverPackage">
                    <Button.Style>
                        <Style>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status.Value, Mode=OneWay}"
                                             Value="{x:Static bl:PackageStatus.collected}">
                                    <Setter Property="Button.Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="Button.Visibility" Value="Collapsed"/>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            <Grid>
                <Grid.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Package.Value.DeliveryTime}" Value="{x:Null}">
                                <Setter Property="Grid.Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Key" />
                    <ColumnDefinition SharedSizeGroup="Value" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Delivered</Label>
                <Label Grid.Column="1" Content="{Binding Package.Value.DeliveryTime}" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>